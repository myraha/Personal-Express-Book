<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Book Database</title>
  <link href="https://fonts.googleapis.com/css?family=Quicksand" rel="stylesheet">
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <section class="container">
    <h3>Your Book List</h3>
    <ul class="bookList">
      <!-- whatever comes from the database will be stored in messages object -->
    <% for(var i=0; i<books.length; i++) {%>
      <li class="message">
        <span><%= books[i].name %></span>
        <span class="space">|</span>
        <span><%= books[i].msg %></span>
        <span><i class="fa fa-trash" aria-hidden="true"></i></span>
      </li>
    <% } %>
    </ul>

    <h2>Add a book and the date you finished it</h2>

    <form action="/books" method="POST">
      <input type="text" placeholder="Book Name" name="name">
      <input type="text" placeholder="Date" name="msg">
      <button class="submit" type="submit">Submit</button>
    </form>
  </section>

  <script src="main.js"></script>

</body>
</html>
